@inject IJSRuntime JsRuntime


<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">BlazorCashRegister</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-dollar" aria-hidden="true"></span> Cash register
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="articles" Match="NavLinkMatch.All">
                <span class="oi oi-dollar" aria-hidden="true"></span> Article management
            </NavLink>
        </li>
        <li class="nav-item px-3" @onclick="CloseApp">
            <NavLink class="nav-link">
                <span class="oi oi-x" aria-hidden="true"></span> Exit
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void CloseApp()
    {
        JsRuntime.InvokeVoidAsync($"window.close");
    }
}
